<?xml version='1.0' encoding='UTF-8' ?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             id="oppna-program-account-activation-core-bc-module-portlet">

  <portlet>
    <portlet-name>ActivateAccount</portlet-name>
    <display-name>ActivateAccount</display-name>
    <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <supported-locale>sv</supported-locale>
    <resource-bundle>i18n.activate-account-messages</resource-bundle>
    <portlet-info>
      <title>Kontoaktivering</title>
      <short-title>Kontoaktivering</short-title>
      <keywords>konto aktivering portalkatalog</keywords>
    </portlet-info>
  </portlet>

  <portlet>
    <portlet-name>CreateAccount</portlet-name>
    <display-name>Inbjudan till Portalkatalogen</display-name>
    <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
      <portlet-mode>edit</portlet-mode>
    </supports>
    <supported-locale>sv</supported-locale>
    <resource-bundle>i18n.create-account-messages</resource-bundle>
    <portlet-info>
      <title>Skapa konto</title>
      <short-title>Skapa konto</short-title>
      <keywords>konto skapa inbjudan portalkatalog</keywords>
    </portlet-info>
    <container-runtime-option>
      <name>javax.portlet.actionScopedRequestAttributes</name>
      <value>true</value>
      <value>numberOfCachedScopes</value>
      <value>10</value>
    </container-runtime-option>
  </portlet>

  <user-attribute>
    <description>User Login ID</description>
    <name>user.login.id</name>
  </user-attribute>
</portlet-app>


