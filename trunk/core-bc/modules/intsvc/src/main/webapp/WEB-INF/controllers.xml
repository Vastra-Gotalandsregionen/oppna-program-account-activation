<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <import resource="classpath*:account-activation-intsvc-jpa.xml" />

  <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="ignoreUnresolvablePlaceholders" value="true" />
    <property name="locations">
      <list>
        <value>classpath:datasource.properties</value>
        <!-- <value>classpath:security.properties</value> -->
      </list>
    </property>
  </bean>

  <bean id="activationController" class="se.vgregion.activation.controllers.ServiceMockController">
    <constructor-arg ref="accountService" />
  </bean>

  <bean id="accountService" class="se.vgregion.account.services.AccountService">
    <constructor-arg ref="oneTimePasswordRepo" />
  </bean>

  <bean id="oneTimePasswordRepo" class="se.vgregion.dao.domain.patterns.repository.db.jpa.DefaultJpaRepository">
    <constructor-arg type="java.lang.Class" value="se.vgregion.activation.domain.OneTimePassword" />
  </bean>

</beans>